#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the storm-supervisor_ctl script
source /var/vcap/jobs/storm-supervisor/helpers/ctl_setup.sh 'storm-supervisor'

mkdir -p $LOG_DIR
mkdir -p $RUN_DIR
mkdir -p $ZOOKEEPER_DIR
mkdir -p $STORM_LOG_DIR

# Set the hostname
hostname <%= index %>.<%= name %>.<%= spec.networks.methods(false).grep(/[^=]$/).first.to_s %>.<%= spec.deployment %>.<%= spec.dns_domain_name %>

case $1 in

  start)
    #pid_guard $PIDFILE $JOB_NAME

    chown --recursive vcap:vcap $STORM_HOME
    chown --recursive vcap:vcap $LOG_DIR
    chown --recursive vcap:vcap $ZOOKEEPER_DIR
    chown --recursive vcap:vcap $STORM_LOG_DIR

    exec chpst -u vcap:vcap $STORM_HOME/bin/storm supervisor
         1>>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log &



    # store pid in $PIDFILE
    echo $! > $PIDFILE
    ;;

  stop)
    kill `cat $PIDFILE`

    ;;
  *)
    echo "Usage: storm-supervisor_ctl {start|stop}"

    ;;

esac
exit 0