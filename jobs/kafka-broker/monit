check process kafka-broker
  with pidfile /var/vcap/sys/run/kafka-broker/kafka-broker.pid
  start program "/var/vcap/packages/bosh-helpers/monit_debugger kafka-broker_ctl '/var/vcap/jobs/kafka-broker/bin/kafka-broker_ctl start'"
  stop program "/var/vcap/packages/bosh-helpers/monit_debugger kafka-broker_ctl '/var/vcap/jobs/kafka-broker/bin/kafka-broker_ctl stop'"
  group vcap
